---
const {
  label = Astro.currentLocale === "en" ? "Search" : "Buscar",
  title = Astro.currentLocale === "en" ? "Send" : "Enviar",
  id = "footer-input",
  name = "email" 
} = Astro.props;

interface Props {
  label?: string;
  title?: string;
  id?: string;
  name?: string;
}

const placeholder = Astro.currentLocale === "en" ? "Enter your email" : "Ingresa tu correo";
---

<div
  class="mt-4 flex flex-col items-center gap-2 rounded-lg bg-neutral-200 p-2 dark:bg-neutral-800 sm:flex-row sm:gap-3"
>
  <div class="w-full">
    <label for={id} class="sr-only">{label}</label>
    <input
      type="text"
      id={id}
      name={name}
      class="block w-full rounded-lg border-transparent bg-neutral-100 px-4 py-3 text-sm text-neutral-600 focus:border-primary-500 focus:ring-primary-400 disabled:pointer-events-none disabled:opacity-50 dark:border-transparent dark:bg-neutral-700 dark:text-gray-300 dark:placeholder:text-neutral-300 caret-primary-500 dark:focus:border-secondary-500"
      placeholder={placeholder}
    />
  </div>
  <button
    class="inline-flex w-full items-center justify-center gap-x-2 whitespace-nowrap rounded-lg border border-transparent bg-primary-500 p-3 text-sm font-bold text-neutral-50 outline-none ring-zinc-500 transition duration-300 hover:bg-sky-900 focus-visible:ring disabled:pointer-events-none disabled:opacity-50 dark:ring-secondary-500 dark:focus:outline-none dark:focus:ring-1 dark:bg-secondary-500 dark:hover:bg-yellow-200 dark:text-black sm:w-auto"
    type="submit"
  >
    {title}
  </button>
</div>
